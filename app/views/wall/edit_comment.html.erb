<div style="background-color: #e9eaed;">
  <h1>Edit Comment</h1>
  <form action="/wall/edit_comment_complete" method="post">
    <input type="hidden" name="post_id" value="<%= @post.id %>">
    <div style="background-color: #ffffff; width: 400px; border: 2px solid #d3d6db; padding: 15px; word-break: break-all;">
      <h3 style="color: #0000ff;"><%= @post.name %></h3>
      <p><%= @post.content %></p>
			<% @post.comments.each do |comment| %>
				<div style="background-color: #fafbfb; width: 390px; border: 1px solid #d3d6db; padding: 0px 5px 0px 5px; word-break: break-all; text-align: left;">
				<% if comment.id == @comment_id %>
					<input type="hidden" name="comment_id" value="<%= comment.id %>">
					<input style="width: 100px;" type="text" name="writer"  value="<%= comment.name %>">: <input style="width: 200px;" type="text" name="content" value="<%= comment.content %>" >
					<input type="submit" value="Edit"> 
				<% else %>
					<p style="font-size: 90%; text-align: left"><span style="color: #0000ff; font-weight: bold;"><%= comment.name %></span> <%= comment.content %></p>
				<% end %>
			</div>
			<% end %>
    </div><br>
  </form>
</div>
