<div style="background-color: #e9eaed;">
  <h1>Write Comment</h1>
  <form action="/wall/write_comment_complete" method="post">
    <input type="hidden" name="post_id" value="<%= @post_comment.id %>">
    <div style="background-color: #ffffff; width: 400px; border: 2px solid #d3d6db; padding: 15px; word-break: break-all;">
      <h3 style="color: #0000ff;"><%= @post_comment.name %></h3>
      <p><%= @post_comment.content %></p>
			<% @post_comment.comments.each do |comment| %>
			<div style="background-color: #fafbfb; width: 390px; border: 1px solid #d3d6db; padding: 0px 5px 0px 5px; word-break: break-all; text-align: left;">
				<p style="font-size: 90%; text-align: left"><span style="color: #0000ff; font-weight: bold;"><%= comment.name %></span> <%= comment.content %></p>
			</div>
			<% end %>
    </div><br>
    <input style="width: 100px;" type="text" name="writer" value="<%= @current_user.username %>" readonly>: <input style="width: 300px;" type="text" name="content" placeholder="Write a comment...">
    <input type="submit" value="write">
  </form>
</div>
